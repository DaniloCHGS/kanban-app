generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id          Int         @id @default(autoincrement())
  title       String      @unique
  description String?
  status      String      @default("TODO")
  SubsTasks   SubsTasks[]

  @@map("tasks")
}

model SubsTasks {
  id        Int     @id @default(autoincrement())
  title     String  @unique
  completed Boolean @default(false)
  task      Task    @relation(fields: [taskId], references: [id])
  taskId    Int

  @@map("substasks")
}
